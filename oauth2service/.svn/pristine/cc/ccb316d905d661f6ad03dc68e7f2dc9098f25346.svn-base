    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="userAccount" property="userAccount" jdbcType="VARCHAR" />
    <result column="userPwd" property="userPwd" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, userAccount, userPwd
  </sql>
  <select id="findByUserAccount" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select 
    <include refid="Base_Column_List" />
    from sysAccount
    where userAccount = #{_parameter,jdbcType=VARCHAR}
  </select>
  <insert id="insert" parameterType="com.zallz.oauth2service.entity.SysAccount" useGeneratedKeys="true" keyProperty="id">
    insert into sysAccount (userAccount, userPwd)
    values (#{userAccount,jdbcType=VARCHAR}, #{userPwd,jdbcType=VARCHAR})
  </insert>
  <select id="findlist" resultMap="BaseResultMap"  >
    select 
    <include refid="Base_Column_List" />
    from sysAccount
  </select>
</mapper>